    <!--slider div end-->
    <div class="container mb-5 text-center">
        <h1 class="course_heading mt-5">Hello <%= n%>
        </h1>
        <h2 class="course_heading my-3">Register Your Course</h2>
        <p class="course_para text-center mb-5">Course Registration means the official recording of a student's name to
            study a course or courses.</p>
        <div class="row">

            <div class="col-md-4 mb-5">
                <div class="card card1">
                    <img class="card-img-top" height="250px" width="300px"
                        src="https://mits-admission-portal.onrender.com/assets/images/card_image1.jpg"
                        alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title ">B.Tech</h5>
                        <p class="card-text">B.Tech is a professional undergraduate engineering degree</p>
                        <% if(b){ %>
                            <a href="/coursedisplay" class="btn btn-info">Display</a>

                            <% }else{ %>
                                <a href="#" data-bs-toggle="modal" data-bs-target="#btech" class="btn cors">Register</a>

                                <% } %>


                    </div>
                </div>
            </div>

            <div class="col-md-4 mb-4">
                <div class="card card2">
                    <img class="card-img-top " height="250px!important" width="300px!important"
                        src="https://mits-admission-portal.onrender.com/assets/images/card_image2.jpg"
                        alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title ">BCA</h5>
                        <p class="card-text">BCA is a three-year Bachelor's Degree in Computer Application </p>
                        <% if(bca){ %>
                            <a href="/coursedisplay" class="btn btn-info">Display</a>

                            <% }else{ %>
                                <a href="#" data-bs-toggle="modal" data-bs-target="#bca" class="btn cors">Register</a>

                                <% } %>

                    </div>
                </div>
            </div>

            <div class="col-md-4 mb-4">
                <div class="card card3">
                    <img class="card-img-top " height="250px" width="300px"
                        src="https://mits-admission-portal.onrender.com/assets/images/card_image3.jpg"
                        alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title ">MCA</h5>
                        <p class="card-text">MCA is a professional post-graduation degree in computer science</p>
                        <% if(mca){ %>
                            <a href="/coursedisplay" class="btn btn-info">Display</a>

                            <% }else{ %>
                                <a href="#" data-bs-toggle="modal" data-bs-target="#mca" class="btn cors">Register</a>

                                <% } %>

                    </div>
                </div>
            </div>

        </div>
    </div>

    <!--  Btech Modal -->
    <div class="modal fade" id="btech" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Btech Registration</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form action="/courseinsert" method="post">
                        <div class="mb-3">
                            <label>Name</label>
                            <input type="text" value="<%= n%>" name="name" class="form-control" required>
                        </div>

                        <div class="mb-3">
                            <label>Email</label>
                            <input type="email" value="<%= e%>" name="email" class="form-control" required>
                        </div>

                        <div class="mb-3">
                            <label>Phone no.</label>
                            <input type="number" name="phone" class="form-control" required>
                        </div>

                        <div class="mb-3">
                            <label>10th Marks</label>
                            <input type="number" name="tenth" class="form-control" required>
                        </div>

                        <div class="mb-3">
                            <label>12th Mark</label>
                            <input type="number" name="twelth" class="form-control" required>
                        </div>

                        <div class="mb-3">
                            <label>Course</label>
                            <input type="text" name="course" value="Btech" class="form-control" readonly required>
                        </div>
                        <button type="submit">Submit</button>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>

